{
  "manifest_version": 3,
  "name": "Coursera Video Helper",
  "version": "1.0",
  "description": "A chrome extension that can help you finish all the video instantly!",
  "permissions": ["cookies", "tabs", "activeTab"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "userid.js"]
    }
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Coursera Video Helper",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
